@model IEnumerable<Demo002.Models.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div class="row">
    <div class="col-md-3">
        <select class="form-control">
            <option value="value">----Choose PaymentType----</option>
            <option value="value">Cod</option>
            <option value="value">Internet Banking</option>
            <option value="value">Direct Transfer</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-control">
            <option value="value">----Choose Status----</option>
            <option value="value">Done</option>
            <option value="value">Pending</option>
            <option value="value">Cancel</option>
        </select>
    </div>
    <div class="col-md-6">
        <input class="form-control" type="text" name="dates" value="" />
    </div>
</div>
<br />
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PaymentTypeId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ShipPhone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedAt)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PaymentTypeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipPhone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
    }

</table>
@section scripts {
    <script type="text/javascript">
        $('input[name="dates"]').daterangepicker();
        $('input[name="dates"]').on('apply.daterangepicker', function(ev, picker) {
            alert(picker.startDate.format('MM/DD/YYYY') + ' - ' + picker.endDate.format('MM/DD/YYYY'));
        });
    </script>
}